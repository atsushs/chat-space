.chat-main
  .chat-main__header
    .chat-main__header__left-box
      %h2.chat-main__header__left-box__group グループ名
      %ul.chat-main__header__left-box__members
        Member : 
        %li.chat-main__header__left-box__members__list 名前
    = link_to "#", class: "chat-main__header__left-box__btn" do
      Edit
  .chat-main__messages
    .chat-main__messages__upper-info
      %p.chat-main__messages__upper-info__name 名前
      %p.chat-main__messages__upper-info__date 2020/07/01(Mon) 00:00:00
    %p.chat-main__messages__text テキスト
    .chat-main__messages__upper-info
      %p.chat-main__messages__upper-info__name 名前
      %p.chat-main__messages__upper-info__date 2020/07/01(Mon) 00:00:00
    %p.chat-main__messages__text テキスト
  .chat-main__form
    = form_tag("/messages", method: :post, class:"new-message") do
      .input-box
        %input.input-box__text(type="text" placeholder="type a message")/
        %label.input-box__image
          = icon('fas', 'image')
          %input.input-box__image__file{type: "file"}
      %input.chat-main__form__submit-btn(type="submit" value="Send")/