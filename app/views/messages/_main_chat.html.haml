.chat-main
  .chat-main__header
    .chat-main__header__left-box
      %h2.chat-main__header__left-box__group
        = @group.name
      %ul.chat-main__header__left-box__members
        Member : 
        %li.chat-main__header__left-box__members__list 
          - @group.users.each do |user|
            =user.name
    = link_to edit_group_path(@group), class: "chat-main__header__left-box__btn" do
      Edit
  .chat-main__messages
    = render @messages
  .form
    = form_for [@group, @message] do |f|
      .form__mask
        = f.text_field :content, class: 'form__mask__message', placeholder: 'type a message' 
        = f.label :image, class: 'form__mask__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden' 
        = f.submit 'Send', class: 'form__submit'


