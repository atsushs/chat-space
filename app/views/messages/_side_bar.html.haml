.side-bar
  .side-bar__header
    .side-bar__header__box
      %p.side-bar__header__box__user-name
        = current_user.name
      .side-bar__header__box__menu
        = link_to new_group_path, class: "menu__icon" do
          = icon('far fa-edit', class: "menu__edit__btn")
        = link_to edit_user_path(current_user), class: "menu__icon" do
          = icon('fas fa-cog', class: "menu__cog__btn")
  .side-bar__groups
    .side-bar__groups__box
      - current_user.groups.each do |group|
        .group
          = link_to '#', class: "group__link-color" do
            .group__name
              = group.name
            .group__message
